version: '3'
services:
  kibana:
    image: elastic/kibana:7.17.24
    container_name: kibana
    environment:
      - SERVER_NAME=kibana
      - ELASTICSEARCH_HOSTS=http://elastic.ru-central1.internal:9200
      - ELASTICSEARCH_USERNAME=elastic
      - ELASTICSEARCH_PASSWORD={{ elastic_password }}
    ports:
      - "80:5601"
    networks:
      - elk-network
    cap_add:
      - CAP_NET_BIND_SERVICE
    restart: always

networks:
  elk-network:
    external: true
